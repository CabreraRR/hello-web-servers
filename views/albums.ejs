<html>

<head>
	<link rel="stylesheet" href="/bootstrap-4.0.0-alpha.6-dist/css/bootstrap.css" />
	<link rel="stylesheet" href="/CSS/main.css" />
	<script src="/JS/main.js"></script>
	<title>HOME :: ALBUMS</title>
</head>

<body>
	<div class="container-fluid">
		<%- include('navbar/navbar') %>
			<p class="page-title">Albums</p>
			<div class="flex-container">
				<% for (var i = 0; i < albums.length; i++) { %>
					<a class="box" href="/album/<%= albums[i].id%>">
						<img src="images/<%= albums[i].artist_id%>.<%=[i]%>.jpg" height="200" width="200">
						<div id="artist">
							<%= albums[i].title %>
						</div>
						<% for (var j = 0; j < artists.length; j++) { %>
							<% if (artists[j].id === albums[i].artist_id) {%>
								<div href="/artist/:/artist[j].id">
									Artist:
									<%= artists[j].name %>
								</div>
								<% var songCount = 0%>
									<% for (var k=0; k<songs.length; k++){%>
										<% if (songs[k].album_id == albums[i].id){%>
											<% songCount++ %>
												<% } %>
													<% } %>
														<div>Songs:
															<%= songCount %>
														</div>
														<% } %>
															<% } %>
					</a>
					<% } %>
			</div>
	</div>
</body>

</html>
